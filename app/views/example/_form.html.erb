<%= form_for job_application do |helper| %>
  <p>
    <%= label_tag(:full_name, "Full name:") %>
    <%= helper.text_field :full_name %>
  </p>

  <p>
    <%= label_tag(:phone, "Phone:") %>
    <%= helper.number_field :phone %>
  </p>

  <p>
    <%= label_tag(:hobby, "Hobby:") %>
    <%= helper.text_field :hobby %>
  </p>

  <p>
    <%= label_tag(:years_experience, "Years of experience:") %>
    <%= helper.number_field :years_experience %>
  </p>

  <p>
    <%= label_tag(:available_date, "Date available:") %>
    <%= helper.date_field :available_date %>
  </p>

  <p>
    <%= helper.submit %>
  </p>
<% end %>
